<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/title_text_view_layout_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/title_text_view_drawable_padding</item>
        <item name="android:drawableStart">@drawable/paw</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/image_text_view_layout_height</item>
        <item name="android:layout_marginEnd">@dimen/image_text_view_margin_end</item>
        <item name="android:layout_marginStart">@dimen/image_text_view_margin_start</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/image</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/description_text_view_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/description_text_view_margin_end</item>
        <item name="android:layout_marginStart">@dimen/description_text_view_margin_start</item>
        <item name="android:layout_marginTop">@dimen/description_text_view_margin_top</item>
        <item name="android:lineSpacingExtra">@dimen/description_text_view_line_spacing_extra</item>
        <item name="android:text">@string/description</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/description_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoTextView">
        <item name="android:layout_marginStart">@dimen/info_text_view_layout_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/info_text_view_layout_marginEnd</item>
        <item name="android:layout_marginBottom">@dimen/info_text_view_layout_marginBottom</item>
        <item name="android:drawablePadding">@dimen/info_text_view_drawablePadding</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
